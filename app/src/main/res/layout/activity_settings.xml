<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/settings_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_sms"
        android:textSize="20sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/textfield_SMStext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_8dp_margin"
        android:hint="@string/textfield_SMStext"/>

    <EditText
        android:id="@+id/textfield_SMSdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_8dp_margin"
        android:hint="@string/textfield_SMSdate"/>

    <View style="@style/Divider"/>

    <TextView
        android:id="@+id/settings_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_8dp_margin"
        android:text="@string/settings_system"
        android:textSize="20sp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_8dp_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/switch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_8dp_margin"
            android:text="@string/setting_service"/>
        <Switch
            android:id="@+id/switch_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View style="@style/Divider"/>

</LinearLayout>