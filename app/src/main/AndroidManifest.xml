<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="s180859_s198527.mappe2" >

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Contacts"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_contacts"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="s180859_s198527.mappe2.MainActivity" />
        </activity>
        <activity
            android:name=".RegContact"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_regcontact"
            android:parentActivityName=".Contacts"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="s180859_s198527.mappe2.Contacts" />
        </activity>
        <activity
            android:name=".Settings"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Settings"
            android:parentActivityName=".Contacts"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="s180859_s198527.mappe2.Contacts" />
        </activity>

        <activity
            android:name=".Resultat"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Resultat"
            android:parentActivityName=".Contacts"
            android:screenOrientation="portrait">
        </activity>

        <!-- Deklarerer Broadcast receiver som kjører på BOOT_COMPLETED -->
        <receiver
            android:name=".SMSReceiver"
            android:enabled="true"
            android:exported="false"
            android:process=":remote" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <!-- Deklarerer service BOGERN -->
        <service
            android:name=".SMSService"
            android:exported="false" />
        <service
            android:name=".SMSAlarm"
            android:exported="false" />

    </application>

</manifest>
